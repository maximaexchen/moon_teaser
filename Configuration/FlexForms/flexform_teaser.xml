<T3DataStructure>
    <sheets>
        <!--
            ################################
              SHEET General Settings
            ################################
        -->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Optionen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.source>
                        <TCEforms>
                            <label>Woher sollen die Teaser kommen?</label>

                            <config>
                                <type>select</type>
                                <items type="array">


                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Unterseiten</numIndex>
                                        <numIndex index="1">sub_pages</numIndex>
                                    </numIndex>


                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Ausgewählte Seiten</numIndex>
                                        <numIndex index="1">selected_pages</numIndex>
                                    </numIndex>



                                </items>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.source>



                    <settings.pages>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Seitenwahl</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>3</size>
                                <maxitems>22</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.pages>


                    <settings.template>
                        <TCEforms>
                            <label>Template</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>Moon\Teaser\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Bitte wählen</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.template>



                    <settings.colspan>
                        <TCEforms>
                            <label>Größenverhältnis zum Container</label>
                            <config>
                                <type>select</type>
                                <items type="array">

                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Volle Breite (1/1)</numIndex>
                                        <numIndex index="1">12</numIndex>
                                    </numIndex>

                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Halbe Breite (1/2)</numIndex>
                                        <numIndex index="1">6</numIndex>
                                    </numIndex>

                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Drittel (1/3)</numIndex>
                                        <numIndex index="1">4</numIndex>
                                    </numIndex>

                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Startseite</numIndex>
                                        <numIndex index="1">3</numIndex>
                                    </numIndex>

                                </items>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.colspan>

                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
